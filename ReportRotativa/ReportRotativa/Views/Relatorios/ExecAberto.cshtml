    var totalSec = ViewBag.totalSec;
    var totalSecRec = ViewBag.totalSecRec;
    var totalAquisicao = ViewBag.totalAquisicao;
    var totalConfissao = ViewBag.totalConfissao;
    var totalRecompra = ViewBag.totalRecompra;
    var totalFidcRec = ViewBag.totalFidcRec;
    var totalFidcCobSim = ViewBag.totalFidcCobSim;
    var totalConfSec = ViewBag.totalConfSec;
    var totalAquiSec = ViewBag.totalAquiSec;

    var qtdCodSimples = ViewBag.qtdCodSimples;
    var qtdFactoring = ViewBag.qtdFactoring;
    var qtdFidc = ViewBag.qtdFidc;
    var qtdCobSimplesSec = ViewBag.qtdCobSimplesSec;
    var qtdSec = ViewBag.qtdSec;
    var qtdSecRec = ViewBag.qtdSecRec;
    var qtdAquisicao = ViewBag.qtdAquisicao;
    var qtdConfissao = ViewBag.qtdConfissao;
    var qtdRecompra = ViewBag.qtdRecompra;
    var qtdFidcRec = ViewBag.qtdFidcRec;
    var qtdFidcCobSim = ViewBag.qtdFidcCobSim;
    var qtdConfSec = ViewBag.qtdConfSec;
    var qtdAquiSec = ViewBag.qtdAquiSec;
    var CaminhoPDF = ViewBag.CaminhoPDF;
}
@{
    Layout = null;
    ViewBag.Title = "VentureNegócios";
}
<!DOCTYPE html>
<html lang="pt-br" class="no-js">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
