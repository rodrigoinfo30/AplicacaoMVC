    <script src="~/Layouts/Menu/js/modernizr.custom.js"></script>
    @Styles.Render("~/Layouts/Menu/css")
    
</head>
<body>
    @if (ViewBag.HideTextBox == true)
    {
        <div class="destaque1">
            <br />
            <span class="login100-form-logo-p-body">
                <i class="zmdi zmdi-landscape"></i>
            </span>
            <h1>Relação de títulos em aberto</h1>
            <h2>Período </h2>
            <h3>Data inicial: @Html.DisplayFor(modelItem => dt1)</h3>
            <h3>Data Final: @Html.DisplayFor(modelItem => dt2)</h3>
            <h4 style="text-align:left">@Html.Raw(ViewBag.DatNow)</h4>
            @*<div style="text-align:left">@Html.ActionLink("Exportar para PDF", "PrintExecutaRels")</div>*@
            @*<h4><a href="/MVCVMONEYWEB/ExecutaRel/ExecAberto?pdf=true"><b>Gerar Relatório em PDF</b></a></h4>*@
            <h4><a href="@Html.DisplayFor(modelItem => CaminhoPDF)"><b>Gerar Relatório em PDF</b></a></h4>
        </div>
        <table class="customers-table">
            <tr>
                <th>Sacado</th>
                <th>Documento</th>
                <th>Vencto</th>
                <th>DA</th>
                <th>Banco</th>
                <th>Cobrança</th>
                <th>T.Doc</th>
                <th>Valor</th>
                <th>Operação</th>
                <th>Dt.Operação</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Nom_sacado) </td>
                    <td> @Html.DisplayFor(modelItem => item.Documento) </td>
                    <td> @Html.DisplayFor(modelItem => item.Vencto) </td>
                    <td> @Html.DisplayFor(modelItem => item.DA) </td>
                    <td> @Html.DisplayFor(modelItem => item.Cod_banco) </td>
                    <td> @Html.DisplayFor(modelItem => item.Sts_cob) </td>
                    <td> @Html.DisplayFor(modelItem => item.Sts_doc) </td>
                    <td align="right"> @Html.DisplayFor(modelItem => item.Vlr_tit) </td>
                    <td> @Html.DisplayFor(modelItem => item.Operacao) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dt_oper) </td>
                </tr>
            }
        </table>
        <br />
        <div class="div-rodape">
            <h3>@Html.DisplayFor(modelItem => totalCobSimples)</h3>
            <h3>@Html.Raw(ViewBag.qtdCodSimples)</h3>
            <h3>@Html.DisplayFor(modelItem => totalFidc)</h3>
            <h3>@Html.Raw(ViewBag.qtdFidc)</h3>
            <h3>@Html.DisplayFor(modelItem => totalFactoring)</h3>
            <h3>@Html.Raw(ViewBag.qtdFactoring)</h3>
            <h3>@Html.DisplayFor(modelItem => totalCodSimplesSec)</h3>
            <h3>@Html.Raw(ViewBag.qtdCobSimplesSec)</h3>
            <h3>@Html.DisplayFor(modelItem => totalSec)</h3>
            <h3>@Html.Raw(ViewBag.qtdSec)</h3>
            <h3>@Html.DisplayFor(modelItem => totalSecRec)</h3>
            <h3>@Html.Raw(ViewBag.qtdSecRec)</h3>
            <h3>@Html.DisplayFor(modelItem => totalAquisicao)</h3>
            <h3>@Html.Raw(ViewBag.qtdAquisicao)</h3>
            <h3>@Html.DisplayFor(modelItem => totalConfissao)</h3>
            <h3>@Html.Raw(ViewBag.qtdConfissao)</h3>
            <h3>@Html.DisplayFor(modelItem => totalRecompra)</h3>
            <h3>@Html.Raw(ViewBag.qtdRecompra)</h3>
            <h3>@Html.DisplayFor(modelItem => totalFidcRec)</h3>
            <h3>@Html.Raw(ViewBag.qtdFidcRec)</h3>
            <h3>@Html.DisplayFor(modelItem => totalFidcCobSim)</h3>
            <h3>@Html.Raw(ViewBag.qtdFidcCobSim)</h3>
            <h3>@Html.DisplayFor(modelItem => totalConfSec)</h3>
            <h3>@Html.Raw(ViewBag.qtdConfSec)</h3>
            <h3>@Html.DisplayFor(modelItem => totalAquiSec)</h3>
            <h3>@Html.Raw(ViewBag.qtdAquiSec)</h3>
        </div>

    <!-- -->
        <div class="div-rodape">
            <div>
                <h4><b>@Model.Count registros de @Model.TotalItemCount</b></h4>
            </div>
            @{
                if (Model.TotalItemCount != Model.Count)
                {
                    <div class="row">
                        <div class="col-md-12">
                            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                            @if (Model.HasPreviousPage)
                            {
                                @Html.ActionLink("<<", "ExecAberto", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                                @Html.Raw(" ");
                                @Html.ActionLink("< Anterior", "ExecAberto", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            }
                            else
                            {
                                @:<<
                                @Html.Raw(" ");
                                @:< Anterior
                        }

                            @if (Model.HasNextPage)
                            {
                                @Html.ActionLink("Próxima >", "ExecAberto", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                                @Html.Raw(" ");
                                @Html.ActionLink(">>", "ExecAberto", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            }
                            else
                            {
                                @:Próxima >
                                @Html.Raw(" ")
                                @:>>
                        }
                        </div>
                    </div>
                }
            }
        </div>
                }
    @if (TempData["AlertaSelecao"] != null)
    {
        <h3 class="alert alert-danger" >@TempData["AlertaSelecao"]</h3>        
    }

