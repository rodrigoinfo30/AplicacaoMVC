@model PagedList.IPagedList<MoneyReport.Models.CamposRelModels>

@{
    var dt1 = ViewBag.Datini;
    var dt2 = ViewBag.Datfim;
    var ValorTotalDeb = ViewBag.ValorTotalDeb;
    var ValorTotalCred = ViewBag.ValorTotalCred;
    var ValorTotalSaldo = ViewBag.ValorTotalSaldo;
    var CaminhoPDF = ViewBag.CaminhoPDF;
}
@{
    Layout = null;
    ViewBag.Title = "VentureNegócios";
}
<!DOCTYPE html>
<html lang="pt-br" class="no-js">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="icon" type="image/png" href="~/Layouts/Menu/images/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VentureNegócios</title>
    <meta name="description" content="A sidebar menu as seen on the Google Nexus 7 website" />
    <meta name="keywords" content="google nexus 7 menu, css transitions, sidebar, side menu, slide out menu" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/Layouts/Menu/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/Layouts/Menu/css/demorel.css" />
    <link rel="stylesheet" type="text/css" href="~/Layouts/Menu/css/componentrel.css" />
    <script src="~/Layouts/Menu/js/modernizr.custom.js"></script>
    @Styles.Render("~/Layouts/Menu/css")
</head>
<body>
@if (ViewBag.HideTextBox == true)
{
    <div class="destaque1">
        <br />
        <span class="login100-form-logo-p-body">
            <i class="zmdi zmdi-landscape"></i>
        </span>
        @if (TempData["Realizado"] != null)
        {
            <h2>Conta gráfica realizado </h2>
            <h3>Data inicial: @Html.DisplayFor(modelItem => dt1)</h3>
            <h3>Data Final: @Html.DisplayFor(modelItem => dt2)</h3>
        }
        else
        {
            <h2>Conta Gráfica em aberto</h2>
        }
        <h4 style="text-align:left">@Html.Raw(ViewBag.DatNow)</h4>
        @*<h4><a href="/MVCVMONEYWEB/ExecutaRel/ExecExtr?pdf=true"><b>Gerar Relatório em PDF</b></a></h4>*@
        <h4><a href="@Html.DisplayFor(modelItem => CaminhoPDF)"><b>Gerar Relatório em PDF</b></a></h4>
    </div>
    if (ViewBag.Aberto == true)
    {
        <table class="customers-table">
            <tr>
                <th>Tipo Movimento</th>
                <th>Documento</th>
                <th>Sacado</th>
                <th>Débito</th>
                <th>Crédito</th>
                <th>Vlr Original</th>
                <th>Dt Vencto</th>
                <th>Vlr Partida</th>
                <th>Dt Partida</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Des_mov_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Num_documento_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Sacado_Ext) </td>
                    @if (item.Deb_Ext != "0,00")
                    {
                        <td align="right"> <font color="red" style="text-align: right">@Html.DisplayFor(modelItem => item.Deb_Ext)</font> </td>
                    }
                    else
                    {
                        <td></td>
                    }

                    @if (item.Cred_Ext != "0,00")
                    {
                        <td align="right"> <font color="blue" style="text-align: right">@Html.DisplayFor(modelItem => item.Cred_Ext)</font> </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td align="right"> @Html.DisplayFor(modelItem => item.Vlr_original_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dat_vencto_Ext) </td>
                    <td align="right"> @Html.DisplayFor(modelItem => item.Vlr_partida_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dat_partida_Ext) </td>
                </tr>
            }
        </table>
        <br />
    }
    if (ViewBag.Realizado == true)
    {
        <table class="customers-table">
            <tr>
                <th>Tipo Movimento</th>
                <th>Documento</th>
                <th>Sacado</th>
                <th>Tipo Acerto</th>
                <th>Dt Partida</th>
                <th>Dt Acerto</th>
                <th>Vlr Partida</th>
                <th>Vlr Acerto</th>
                <th>Dt Vencto</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Des_mov_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Num_documento_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Sacado_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Tipo_Acerto_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dat_partida_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dat_pagto_Ext) </td>
                    <td align="right"> @Html.DisplayFor(modelItem => item.Vlr_partida_Ext) </td>
                    <td align="right"> @Html.DisplayFor(modelItem => item.Vlr_pagto_Ext) </td>
                    <td> @Html.DisplayFor(modelItem => item.Dat_vencto_Ext) </td>
                </tr>
            }
        </table>
        <br />
    }
    <div class="div-rodape">
        <h3>@Html.DisplayFor(modelItem => ValorTotalDeb)</h3>
        <h3>@Html.DisplayFor(modelItem => ValorTotalCred)</h3>
        <h3>@Html.DisplayFor(modelItem => ValorTotalSaldo)</h3>
    </div>

    <!-- -->
    <div class="div-rodape">
        <div>
            <h4><b>@Model.Count registros de @Model.TotalItemCount</b></h4>
        </div>
        @{
            if (Model.TotalItemCount != Model.Count)
            {
                <div class="row">
                    <div class="col-md-12">
                        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                        @if (Model.HasPreviousPage)
                        {
                            @Html.ActionLink("<<", "ExecExtr", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            @Html.Raw(" ");
                            @Html.ActionLink("< Anterior", "ExecExtr", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        }
                        else
                        {
                            @:<<
                            @Html.Raw(" ");
                            @:< Anterior
                        }

                        @if (Model.HasNextPage)
                        {
                            @Html.ActionLink("Próxima >", "ExecExtr", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            @Html.Raw(" ");
                            @Html.ActionLink(">>", "ExecExtr", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        }
                        else
                        {
                            @:Próxima >
                            @Html.Raw(" ")
                            @:>>
                        }
                    </div>
                </div>
            }
        }
    </div>
            }
@if (TempData["AlertaSelecao"] != null)
{
    <h3 class="alert alert-danger">@TempData["AlertaSelecao"]</h3>
}
